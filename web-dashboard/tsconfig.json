{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "paths": {
            "@src/*": [
                "*"
            ],
            "@home/*": [
                "Home/*"
            ],
            "@routes/*": [
                "Routes/*"
            ],
            "@components/*": [
                "Components/*"
            ],
            "@services/*": [
                "Services/*"
            ],
            "@utils/*": [
                "Utils/*"
            ]
        }
    },
    "include": [
        "src",
    ]
}